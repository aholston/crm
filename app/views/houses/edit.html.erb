<div class='container'>
  <h2>Edit Listing</h2>
  <form action='/houses/<%= @house.id %>' method='POST'>
    <input type='hidden' name='_method' value='PATCH'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

    <div class='form-group'>
      <label for='house[address]'>Address:</label>
      <input type='text' value='<%= @house.address %>' name='house[address]' placeholder='<%= @house.address %>' class='form-control'>
    </div>

    <div class='form-group'>
      <label for='house[rooms]'>Rooms</label>
      <select name='house[rooms]' value='<%= @house.rooms %>' class='form-control'>
        <option value='1'>1</option>
        <option value='2'>2</option>
        <option value='3'>3</option>
        <option value='4'>4</option>
        <option value='5'>5</option>
        <option value='6'>6</option>
        <option value='7'>7</option>
        <option value='8'>8</option>
        <option value='9'>9</option>
        <option value='10'>10</option>
      </select>
    </div>

    <div class='form-group'>
      <label for='house[bathrooms]'>Bathrooms</label>
      <select name='house[bathrooms]' value='<%= @house.bathrooms %>' class='form-control'>
        <option value='1'>1</option>
        <option value='2'>2</option>
        <option value='3'>3</option>
        <option value='4'>4</option>
        <option value='5'>5</option>
        <option value='6'>6</option>
        <option value='7'>7</option>
        <option value='8'>8</option>
        <option value='9'>9</option>
        <option value='10'>10</option>
      </select>
    </div>

    <div class='form-group'>
      <label for='house[sqft]'>Square Feet</label>
      <input type='text' value='<%= @house.sqft %>' name='house[sqft]' class='form-control'>
    </div>

    <div class='form-group'>
      <label for='house[description]'>Description</label>
      <textarea name='house[description]' value='<%= @house.description %>' class='form-control'></textarea>
    </div>

    <div class='form-group'>
      <label for='house[price]'>Price</label>
      <input type='text' name='house[price]' value='<%= @house.price %>'>
    </div>

    <div class='form-group'>
      <label for='house[client_id]'>Client</label>
      <select name='house[client_id]' value='<%= @house.client.id %>' class='form-control'>
      <% @clients.each do |client| %>
        <option value='<%= client.id %>'>
          <%= client.first_name %> <%= client.last_name %>
        </option>
      <% end %>
      </select>
    </div>


    <input type='submit' value='Submit' class='form-control btn-primary'>
  </form>
</div>
