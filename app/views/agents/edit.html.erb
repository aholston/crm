<div class='container'>
  <h3 class='text-center'>Edit <%= @agent.first_name %> <%= @agent.last_name %></h3>
  <form action='/agents/<%= @agent.id %>' method='POST'>
    <input type='hidden' name='_method' value='PATCH'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <div class='form-group'>
      <label for='agent[first_name]'>First Name:</label>
      <input type='text' class='form-control' name='agent[first_name]' value='<%= @agent.first_name %>'>
    </div>

    <div class='form-group'>
      <label for='last_name'>Last Name:</label>
      <input type='text' class='form-control' name='agent[last_name]' value='<%= @agent.last_name %>'>
    </div>

    <div class='form-group'>
      <label for='agent[email]'>Email:</label>
      <input type='email' class='form-control' name='agent[email]' value='<%= @agent.email %>'>
    </div>

    <div class='form-group'>
      <label for='agent[phone]'>Phone:</label>
      <input type='text' class='form-control' name='agent[phone]' value='<%= @agent.phone %>'>
    </div>

    <div class='form-group'>
      <label for='house'>House:</label>
      <select name='house' class='form-control'>
        <% if @agent.house.nil? %>
        <option value=''>None</option>
        <% else %>
        <option value='<%= @agent.house.id %>'><%= @agent.house.address %></option>
        <% end %>
        <% @houses.each do |house| %>
        <option value='<%= house.id %>'><%= house.address %></option>
        <% end %>
      </select>
    </div>



      <input class='form-control btn-primary' type='submit'>
      </form>
    </div>
