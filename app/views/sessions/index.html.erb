<div class='container'>




<div class='row'>
  <div class='center_div bg-primary'>
    <form action='/sessions' method='POST'>
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <div class='form-group'>
        <label for='user[username]'>Username:</label>
        <input type='text' name='user[username]' class='form-control'>
      </div>

      <div class='form-group'>
        <label for='user[password]'>Password:</label>
        <input type='password' name='user[password]' class='form-control'>
      </div>

      <input type='submit' value='Log In' class='btn-default text-primary'>
      <button class='btn-default text-primary'><a href='/password_resets/new'>Forgot password</a></button>
    </form>
  </div>

</div>



</div>
